{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "ES2019"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2019",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "lib/*": ["./app/old-app/lib/*"],
      "features/*": ["./app/old-app/features/*"],
      "components/*": ["./app/old-app/components/*"],
      "pages/*": ["./app/old-app/pages/*"],
      "hooks": ["./app/old-app/hooks/index"],
      "hooks/*": ["./app/old-app/hooks/*"],
      "assets/*": ["./app/old-app/assets/*"],
      "generated/*": ["./app/old-app/generated/*"],
      "ledger": ["./app/old-app/ledger"]
    }
  },
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "app",
    "types/react-app-env.d.ts",
    "types/rdf-validate-shacl/index.d.ts",
    "types/url-search-params-polyfill.d.ts"
  ]
}
